<h1>{{#if edit}}Editar{{else}}Nuevo{{/if}} producto</h1>
{{#if errors}}<ul>{{#each errors}}<li>{{this.msg}}</li>{{/each}}</ul>{{/if}}
<form action="{{#if edit}}/products/{{product._id}}{{else}}/products{{/if}}" method="post" enctype="multipart/form-data">
  <label>Nombre <input name="nombre" value="{{product.nombre}}" required></label>
  <label>Precio <input name="precio" type="number" step="0.01" value="{{product.precio}}" required></label>
  <label>Descripci√≥n <textarea name="descripcion">{{product.descripcion}}</textarea></label>
  <label>Imagen <input name="imagen" type="file" accept="image/*"></label>
  <button>{{#if edit}}Guardar cambios{{else}}Crear{{/if}}</button>
</form>
